@page "/not-authorized"
@using Radzen
@using Radzen.Blazor
@inject NavigationManager NavigationManager

<div class="d-flex justify-content-center align-items-center" style="height: 80vh;">
    <RadzenCard Style="max-width: 400px; text-align: center;">
        <RadzenIcon Icon="lock" Style="font-size: 48px; color: #e53935;" />
        <h3 class="text-danger mt-3">Accès refusé</h3>
        <p>Vous n'avez pas les droits pour accéder à cette page.</p>
        <RadzenButton Text="Retour à l'accueil" Icon="home" Click="@(() => NavigationManager.NavigateTo("/"))" Style="margin-top: 20px;" />
    </RadzenCard>
</div>
